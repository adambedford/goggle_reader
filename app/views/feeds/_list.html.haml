.row
  .section
    .row.center-align
      = link_to "Add Feed", "#add-feed-modal", class: "btn waves-effect waves-light col l12 modal-trigger"

  - if current_user.feeds.any?
    .section
      .collection
        = feed_link "All Feeds", articles_path, class: "collection-item"

        - current_user.feeds.each do |feed|
          = feed_link feed.name, feed_path(feed), class: "collection-item"

  - else
    .card-panel
      %span
        You have not added any feeds. Add one
        = link_to "here", new_feed_path
